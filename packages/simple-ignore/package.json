{
  "name": "simple-ignore",
  "version": "0.0.0",
  "description": "One `.gitignore` file to rule them all.",
  "license": "MIT",
  "author": {
    "name": "ViPro",
    "email": "vdustr@gmail.com",
    "url": "https://vdustr.dev"
  },
  "type": "module",
  "exports": {
    ".": {
      "default": {
        "default": "./dist/index.cjs",
        "types": "./dist/index.d.cts"
      },
      "import": {
        "default": "./dist/index.mjs",
        "types": "./dist/index.d.mts"
      }
    },
    "./*": {
      "default": {
        "default": "./dist/*.cjs",
        "types": "./dist/*.d.cts"
      },
      "import": {
        "default": "./dist/*.mjs",
        "types": "./dist/*.d.mts"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": "./bin/simple-ignore.cjs",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "cli": "tsx src/cli.ts",
    "cp": "run-s cp:*",
    "cp:license": "fse copy ../../LICENSE ./LICENSE",
    "cp:readme": "fse copy ../../README.md ./README.md",
    "prepublishOnly": "pnpm run build && pnpm run cp"
  },
  "dependencies": {
    "ts-toolbelt": "^9.6.0"
  }
}
